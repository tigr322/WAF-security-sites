# Блокировка сканирования портов
alert tcp any any -> any any (msg:"SCAN Potential port scan"; flow:stateless; flags:S,12; threshold: type both, track by_dst, count 30, seconds 60; sid:1000001; rev:1;)

# Обнаружение SQL инъекций
alert http any any -> any any (msg:"SQL Injection Attempt"; flow:established,to_server; content:"union"; nocase; content:"select"; nocase; pcre:"/(union|select).*from/i"; sid:1000002; rev:1;)

# Обнаружение XSS атак
alert http any any -> any any (msg:"XSS Attempt"; flow:established,to_server; pcre:"/<script|<iframe|javascript:/i"; sid:1000003; rev:1;)

# Подозрительные User-Agents
alert http any any -> any any (msg:"Suspicious User-Agent"; flow:established,to_server; content:"User-Agent"; nocase; pcre:"/(nmap|nikto|sqlmap|w3af|metasploit)/i"; sid:1000004; rev:1;)